<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
    <%- include('../includes/navigation.ejs') %>
            <section class="main__container">
                <h1 class="main__title"><%= pageTitle %></h1>
                <div class="content__container">
                    <div class="main-form__container">
                        <form class="main-form" action="/prijava" method="POST">
                            <div class="main-form__group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" class="main-form__input" value="<% if (existingData) { %><%= existingData.email %><% } %>" placeholder="Email" required>
                            </div>
                            <div class="main-form__group">
                                <label for="password">Šifra</label>
                                <input type="password" id="password" name="password" class="main-form__input" placeholder="Šifra" required>
                            </div>
                            <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                            <input type="hidden" name="redirectTo" value="<%= redirectTo %>">
                            <button class="btn" type="submit">Prijava</button>
                            <% if (errorMessage) { %>
                                <div class="user-message user-message--error"><%= errorMessage %></div>
                            <% } %>
                        </form>
                        <a class="main__link" href="/restartujte-sifru">Zaboravljena Lozinka?</a>
                    </div> 
                </div>
            </div>
        </section>
    <%- include('../includes/end.ejs') %>

