        <button id="side-menu-toggle">Meni</button>
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/fitness-family/' ? 'active' : '' %>" href="/fitness-family">Početna</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/fitness-family//teretane' ? 'active' : '' %>" href="/fitness-family/teretane">Teretane</a>
